<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:material="using:Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ImageViewer.Views.ImagesView">

	<Grid RowDefinitions="Auto, *, Auto" ColumnDefinitions="*, Auto">
		<TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding _path}"></TextBlock>
		<Button Grid.Row="0" Grid.Column="1"  Command="{Binding SelectImages}">
			<material:MaterialIcon Kind="FolderMultipleImage"/>
		</Button>
		<ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
			<ListBox.DataTemplates>
				<DataTemplate>
					<TextBlock></TextBlock>
				</DataTemplate>
			</ListBox.DataTemplates>
		</ListBox>
		<TextBlock  Grid.Row="2" Grid.Column="0" ></TextBlock>
		<Button Grid.Row="2" Grid.Column="1">
			<material:MaterialIcon Kind="FileUploadOutline"/>
		</Button>
		<TextBlock  Grid.Row="2" Grid.Column="0" ></TextBlock>
		<Button Grid.Row="2" Grid.Column="1">
			<material:MaterialIcon Kind="FileDownloadOutline"/>
		</Button>
	</Grid>

</UserControl>
